<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.UserDao">

    <select id="queryUser" resultType="com.example.demo.entity.User">
        SELECT user_id, user_name, age,sex,telephone,address,password,user_type
        FROM user
    </select>

    <select id="queryUserById" resultType="com.example.demo.entity.User">
        SELECT user_id, user_name, age,sex,telephone,address,password,user_type
        FROM user
        WHERE
            user_id = #{userId}
    </select>

    <insert id="insertUser" useGeneratedKeys="true" keyProperty="userId"
            keyColumn="userId" parameterType="com.example.demo.entity.User">
        INSERT INTO
            user(user_name,age,sex,telephone,address,password,user_type)
        VALUES
            (#{userName},#{age},#{sex},#{telephone},#{address},#{password},#{userType})
    </insert>

    <update id="updateUser" parameterType="com.example.demo.entity.User">
        update user
        <set>
            <if test="userName != null">user_name=#{userName},</if>
            <if test="age != null">age=#{age},</if>
            <if test="sex != null">sex=#{sex},</if>
            <if test="telephone != null">telephone=#{telephone},</if>
            <if test="address != null">address=#{address},</if>
            <if test="password != null">password=#{password},</if>
            <if test="userType != null">user_type=#{userType}</if>
        </set>
        where
            user_id = #{userId}
    </update>

    <delete id="deleteUser">
        DELETE FROM
            user
        WHERE
            user_id = #{userId}
    </delete>

</mapper>
