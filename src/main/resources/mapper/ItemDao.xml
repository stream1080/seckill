<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.ItemDao">

    <select id="queryItem" resultType="com.example.demo.entity.Item">
        SELECT item_id,user_id,product_id,total,amount,create_time,status
        FROM
            item
    </select>

    <select id="queryItemById" resultType="com.example.demo.entity.Item">
        SELECT item_id,user_id,product_id,total,amount,create_time,status
        FROM item
        WHERE
            item_id = #{itemId}
    </select>

    <insert id="insertItem" useGeneratedKeys="true" keyProperty="itemId"
            keyColumn="itemId" parameterType="com.example.demo.entity.Item">
        INSERT INTO
            item(user_id,product_id,total,amount,status)
        VALUES
            (#{userId},#{productId},#{total},#{amount},#{status})
    </insert>

    <update id="updateItem" parameterType="com.example.demo.entity.Item">
        update item
        <set>
            <if test="userId != null">user_id=#{userId},</if>
            <if test="productId != null">product_id=#{productId},</if>
            <if test="total != null">total=#{total},</if>
            <if test="amount != null">amount=#{amount},</if>
            <if test="status != null">status=#{status}</if>
        </set>
        where
        item_id = #{itemId}
    </update>

    <delete id="deleteItem">
        DELETE FROM
            item
        WHERE
            item_id = #{itemId}
    </delete>

</mapper>
